#ARRAY

#DECLARING ARRAY
# from array import *     #IMPORTING ALL class of package array, This may contain unnecessary files
from array import array     #IMporting array class from package array  , This is only required for us
#arrayName=array(typecode,[Initializers])    #DECLARE ARRAYS main syntax
my_array=array('i',[]) #Blank array which can be input from keyboard, file, database
my_array=array('i',[10,20,10,40,10])    #i=integer, f=float, s=string
print(type(my_array))   #print types of array
print(len(my_array))    #print length of arrays i.e number of items on array
print(my_array)     #print all values present on arrays
print(id(my_array)) #Prints memory address
for item in my_array:
    print(item)

arr4=array('i',[])
print(arr4)
arr4[0:2] =array('i',[1,2,3])   #we can add elements on array later
print(arr4)
arr4[3:4]=array('i',[4,5])
print(arr4)
print(len(arr4))
print(type(arr4))

#indexing
print(len(my_array))    #Most important function on array to insert and remove from array
print(my_array[1])  #print numbers of that index from front (indexing starts from 0 on front)
print(my_array[3])
print(my_array[-1]) #print numbers of that index from last (indexing starts from -1 on last)
# print(my_array[5])  #gives errors because there is not any elements on index 5 from front
# print(my_array[-6]) #gives errors because there is not any elements on index 6 from back

#slicing            #Errors does not come on this topic
print(my_array[:])      #print all elements presented on array
print(my_array[1:])     #print all elements from index 1 to all
print(my_array[:3])     #print all upto <3 index
print(my_array[2:4])     #print 2 to 4 index i.e lessthan 4 index
my_array[5:10]=array('i',[6,7,8,9,10,11])
print(my_array)
print(len(my_array))
print(my_array[::3])      #skips numbers on between numbers upto n digits

#ADDING AND REMOVING ELEMENTS ON ARRAY
my_array.append(20)     #Add elements on array from last
print(len(my_array))
print(my_array)
my_array[6:8]=array('i',[41,42,43,44])
print(my_array)
my_array.remove(10)     #Removes elements or values 41 from array
print(my_array)
my_array.pop(2)     #remove values of that index
print(my_array)

#ARRAY CONCATENATE
arr1=array('i',[1,3,5])
arr2=array('i',[2,4,6])
arr3=arr1+arr2  # adding arr2 on arr 1 i.e from last of array 1
print(arr3)
print(len(arr3))
# print(arr3)
for item in arr3:
    print(item)

